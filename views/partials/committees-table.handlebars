{{#if resultsCount}}
    <div class="meta-box">
        <div id="results-count" class="results-count">
          <p>Results: {{resultsCount}} records</p>
            {{#if resultsRange}}
                <p>Viewing: {{currentResultsStart}} - {{currentResultsEnd}}</p>
            {{/if}}
        </div>
        {{#if paginationLinks}}
            <div class="pagination">
                {{#if prevURL}}
                    <a href="{{prevURL}}" id="prev" class="pagination__link"><i class="ti-arrow-left"></i> Previous {{perPage}}</a>
                {{/if}}
                {{#if nextURL}}
                    <a href="{{nextURL}}" id="next" class="pagination__link">Next {{perPage}} <i class="ti-arrow-right"></i></a>
                {{/if}}
            </div>
        {{/if}}
    </div><!--- .meta-box -->
{{/if}}

<table id="results" class="table--sortable">
    <thead>
        <tr>
            <th>Name</th>
            <th>Treasurer Name</th>
            <th>State</th>
            <th>Party</th>
            <th>Organization Type</th>
            <th>Type</th>
            <th>Designation</th>
        </tr>
    </thead>
    <tbody>
        {{#each committees}}
            <tr>
                <td>{{name}}</td>
                <td>{{treasurer}}</td>
                <td>{{state}}</td>
                <td>{{party}}</td>
                <td>{{organization}}</td>
                <td>{{type}}</td>
                <td>{{designation}}</td>
            </tr>
        {{/each}}
    </tbody>
</table>

{{#if resultsCount}}
    <div class="meta-box meta-box--bottom">
        <div id="results-count" class="results-count">
          <p>Results: {{resultsCount}} records</p>
            {{#if resultsRange}}
                <p>Viewing: {{currentResultsStart}} - {{currentResultsEnd}}</p>
            {{/if}}
        </div>
        {{#if paginationLinks}}
            <div class="pagination">
                {{#if prevURL}}
                    <a href="{{prevURL}}" id="prev" class="pagination__link link--icon"><i class="ti-arrow-left"></i> Previous {{perPage}}</a>
                {{/if}}
                {{#if nextURL}}
                    <a href="{{nextURL}}" id="next" class="pagination__link link--icon">Next {{perPage}} <i class="ti-arrow-right"></i></a>
                {{/if}}
            </div>
        {{/if}}
    </div><!--- .meta-box -->
{{/if}}
