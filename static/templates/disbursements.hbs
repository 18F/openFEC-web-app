<div class="panel__row">
  <h4>Recipient Information</h4>
  <table>
    <tr>
      <td>Recipient Name</td>
      {{#if recipient}}
        <td><a href="/committee/{{recipient.committee_id}}">{{recipient.name}}</a></td>
      {{else}}
        <td>{{recipient_name}}</td>
      {{/if}}
    </tr>
    <tr>
      <td>Recipient City & State</td>
      <td>{{ recipient_city }}, {{ recipient_state }}, {{ recipient_zip }}</td>
    </tr>
  </table>
</div>

<div class="panel__row">
  <h4>Transaction Information</h4>
  <table>
    <tr>
      <td>Amount</td>
      <td>{{{ currency disbursement_amount }}}</td>
    </tr>
    <tr>
      <td>Receipt Date</td>
      <td>{{{ datetime disbursement_date }}}</td>
    </tr>
    <tr>
      <td>Memo</td>
      <td>{{ memo_text }}</td>
    </tr>
    <tr>
      <td>Description</td>
      <td>{{ disbursement_description }}</td>
    </tr>
    {{#if election_type_full }}
    <tr>
      <td>Election Type</td>
      <td>{{ election_type_full }}</td>
    </tr>
    {{/if}}
  </table>
</div>

<div class="panel__row">
  <h4>Committee Information</h4>
  <table>
    <tr>
      <td>Name</td>
      <td><a href="/committee/{{committee_id}}">{{committee.name}}</a></td>
    </tr>
    <tr>
      <td>Designation</td>
      <td>{{committee.designation_full}}</a></td>
    </tr>
    {{#if committee.type}}
    <tr>
      <td>Type</td>
      <td>{{committee.type_full}}</a></td>
    </tr>
    {{/if}}
    <tr>
      <td>Treasurer</td>
      <td>{{committee.treasurer_name}}</a></td>
    </tr>
    <tr>
      <td>Committee City & State</td>
      <td>{{ committee.city }}, {{ committee.state }}, {{ committee.zip }}</td>
    </tr>
  </table>
</div>
